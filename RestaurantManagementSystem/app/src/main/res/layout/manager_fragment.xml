<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_order_d"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_history_logo"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:text="Order History"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:text="List Order History"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_table_d"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvtable_logo"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:text="Table"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:text="List Table and edit table or add table"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person_logo_mycustomer_d"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_customer_logo"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:text="My Customer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:text="List Customer used to Order"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_addmenu_d"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_additional_menu"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:text="Additional Menu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:text="Launch and View all additional menu"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_addmenu_d"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_manage"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:text="Category"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:text="List Category"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_meal_d"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_meal"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                android:text="Meal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="50"
                android:gravity="center|left"
                android:text="List Meal"/>

        </LinearLayout>

    </LinearLayout>







</LinearLayout>


