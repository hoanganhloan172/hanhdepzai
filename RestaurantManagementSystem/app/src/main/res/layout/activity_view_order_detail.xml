<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ViewOrderDetailActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back_vieworderdetail"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_arrow_back_my_customer_p" />

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:text="View Order Details"
            android:textColor="@color/purple"
            android:textSize="30dp"
            />
    </LinearLayout>


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvod_customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="ABC"

            android:textSize="14sp"
            android:textColor="@color/purple"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/tvod_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"

            android:text="Status"
            android:textColor="@color/purple"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/tvod_date"
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="20/12/2022"
            android:textColor="@color/purple"
            android:textSize="14sp" />



    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/phoneicon"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="7"
            app:srcCompat="@drawable/ic_phone_d"

            />

        <TextView
            android:id="@+id/tvod_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="098591740"
            android:textColor="@color/purple"
            android:textSize="20sp"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mailicon"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="7"
            app:srcCompat="@drawable/ic_email_d"

            />

        <TextView
            android:id="@+id/tvod_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="phuocbn2k1@gmail.com"
            android:textColor="@color/purple"
            android:textSize="20sp"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/itemtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Item Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quantitytitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/pricetitle"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"


        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_orderdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" />




    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/totaltitle"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="168dp"
            android:text="Sub Total: "

            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvod_total"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="280dp"
            android:text="123$"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>