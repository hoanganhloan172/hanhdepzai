<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodDetailActivity">

    <ImageButton
        android:id="@+id/back_on_ite_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginBottom="19dp"
        android:textColor="@color/purple"
        android:text="Food Detail" />

    <TextView
        android:id="@+id/detail_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="TextView" />
    <TextView
        android:id="@+id/detail_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="22dp"
        android:textColor="@color/purple"
        android:gravity="center"
        android:text="TextView" />

    <ImageView
        android:id="@+id/detail_item_img"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        app:srcCompat="@drawable/bunbo" />



<!--    <TextView-->
<!--        android:id="@+id/detail_item_cate"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginBottom="5dp"-->
<!--        android:textSize="18dp"-->
<!--        android:gravity="center"-->
<!--        android:textColor="@color/purple"-->
<!--        android:text="TextView" />-->



    <TextView
        android:id="@+id/detail_item_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:text="TextView" />

    <Button
        android:id="@+id/btn_detail_item_add_cart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cornerRadius = "20dp"
        android:backgroundTint="@color/purple"

        android:text="Add to cart" />

</LinearLayout>