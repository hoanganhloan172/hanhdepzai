<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="26dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/order_item"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/person"
            android:layout_width="35dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_person_logo_mycustomer_d" />

        <TextView
            android:id="@+id/tvmci_customername"
            android:layout_width="294dp"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/person"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text="ABC"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_below="@+id/person"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_phone_d" />

        <TextView
            android:id="@+id/tvmci_phone"
            android:layout_width="346dp"
            android:layout_height="40dp"
            android:layout_below="@+id/person"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/phone"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text="12"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/mail"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_email_d" />


        <TextView
            android:id="@+id/tvmci_email"
            android:layout_width="346dp"
            android:layout_height="47dp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/mail"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text="12"
            android:textColor="@color/black" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>